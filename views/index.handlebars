<div class='container-fluid main'>
    <div class="row the-customizer">
        <div class="col-md-6">
            <h2>The Customizer</h2>
            <form id="burgerizer" class="create-form">
                <div class="form-group">
                    <label for="burger">Burger name:</label>
                    <input type="text" id="burger" burger_name="burger_name">
                </div>
                <button type="submit">Add burger</button>
            </form>
        </div>
        <div class="col-md-6">
            <img src="./assets/img/cropped-burger.png" class="img-fluid" id="hisnameisburger">
        </div>
    </div>
    <div class='row order-tab'>
        <div class="col-md-6">
            <h1>Order up!</h1>
            <ul>
                {{#each burgers}} {{#unless devoured}} {{> individual-burgers/burger devoured=true}} {{/unless}} {{/each}}
            </ul>
        </div>
        <div class="col-md-6">
            <h1>Conquered</h1>
            <ul>
                {{#each burgers}} {{#if devoured}} {{> individual-burgers/burger devoured=false}} {{/if}} {{/each}}
            </ul>
        </div>
    </div>
</div>